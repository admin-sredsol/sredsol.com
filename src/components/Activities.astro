---
export interface Activity {
  title: string;
  description?: string;
  iframeUrl: string;
}

export interface Props {
  activities: Activity[];
  sectionTitle?: string;
  className?: string;
}

const {
  activities = [],
  sectionTitle = "Featured Activities",
  className = "",
} = Astro.props;
---

<section class={`py-12 bg-gray-50 dark:bg-gray-900 ${className}`}>
  <div class="w-full px-4">
    <h2 class="font-heading text-3xl font-extrabold text-center text-gray-900 dark:text-white mb-6">
      {sectionTitle}
    </h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
      {activities.map((activity) => (
        <div class="bg-white dark:bg-gray-800 rounded-xl shadow-lg p-6 flex flex-col">
          <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">{activity.title}</h3>
          {activity.description && (
            <p class="mb-4 text-gray-600 dark:text-gray-300">{activity.description}</p>
          )}
          <div class="relative w-full pb-[56.25%] h-0 rounded-lg overflow-hidden border border-gray-200 dark:border-gray-700">
            <iframe
              src={activity.iframeUrl}
              title={activity.title}
              allowfullscreen
              loading="lazy"
              class="absolute top-0 left-0 w-full h-full border-0 rounded-lg"
            ></iframe>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

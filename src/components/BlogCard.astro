---
export interface Props {
  id?: string;
  imageSrc: string;
  title: string;
  description: string;
  slug: string;
}

const { id, imageSrc, title, description, slug } = Astro.props;

console.log('BlogCard imageSrc:', imageSrc);
---

<div id={id} class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden">
  <img src={imageSrc} alt={title} class="w-full h-48 object-cover" />
  <div class="p-6">
    <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">{title}</h3>
    <p class="text-gray-600 dark:text-gray-300 mb-6">{description}</p>
    <a
      href={`/post/${slug}`}
      class="inline-block px-4 py-2 bg-blue-600 text-white rounded-full hover:bg-blue-700 transition"
    >
      Read More
    </a>
  </div>
</div>

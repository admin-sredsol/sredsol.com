---
export interface Props {
  id?: string | undefined; // Optional id for the card
  imageSrc: string; // Path to the image
  title: string; // Title of the card
  description: string; // Description text
  buttonLabel?: string | undefined; // Optional button label
  buttonHref?: string | undefined; // Optional button link
  buttonTarget?: string | undefined; // Optional button target
  className?: string | undefined; // Allow custom classes for styling
}

const {
  id = "",
  imageSrc,
  title,
  description,
  buttonLabel = "Learn More",
  buttonHref = "#",
  buttonTarget = undefined,
  className = "",
} = Astro.props;
---

<div id={id} class={`flex flex-col md:flex-row bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden ${className}`}>
  <!-- Image Section -->
  <div class="md:w-1/3">
    <img
      src={imageSrc}
      alt={title}
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Content Section -->
  <div class="p-6 md:w-2/3 flex flex-col justify-between">
    <div>
      <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4">
        {title}
      </h3>
      <p class="text-gray-600 dark:text-gray-300 mb-6" set:html={description}></p>
    </div>
    {buttonHref && (
      <div class="flex justify-center">
        <a
          href={buttonHref}
          target={buttonTarget}
          rel={buttonTarget === "_blank" ? "noopener noreferrer" : undefined}
          class="inline-block px-6 py-2 text-white bg-primary-600 hover:bg-primary-700 rounded-lg shadow-md transition duration-300 dark:bg-primary-500 dark:hover:bg-primary-600"
        >
          {buttonLabel}
        </a>
      </div>
    )}
  </div>
</div>
